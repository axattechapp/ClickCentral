<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >




        <TextView
            android:id="@+id/sell_label"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:fontFamily="@font/helveticabold"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread" />




        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:id="@+id/sellrecyclerview"
            app:layout_constraintTop_toBottomOf="@+id/sell_label"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            app:layout_constraintStart_toStartOf="@id/guideline2"

            android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                android:background="#E0E0E0"
                android:layout_marginBottom="@dimen/_10sdp"

                >

                <TextView
                    android:id="@+id/label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Summary"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/helveticabold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#D9D9D9"
                    android:padding="@dimen/_5sdp"

                    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="@dimen/_5sdp"
                >
                <TextView
                    android:id="@+id/label1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subtotal"
                    android:layout_weight="1"
                    android:padding="@dimen/_2sdp"
                    android:fontFamily="@font/helvetica"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <TextView
                    android:id="@+id/tvsubtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$29.95"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:padding="@dimen/_2sdp"
                    android:fontFamily="@font/helvetica"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

            </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#D9D9D9"
                    android:padding="@dimen/_5sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="@dimen/_5sdp"
                    >
                    <TextView
                        android:id="@+id/label2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shipping Charges"
                        android:layout_weight="1"
                        android:padding="@dimen/_2sdp"
                        android:fontFamily="@font/helvetica"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <TextView
                        android:id="@+id/tvshiping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$9.99"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:padding="@dimen/_2sdp"
                        android:fontFamily="@font/helvetica"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#D9D9D9"
                    android:padding="@dimen/_5sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="@dimen/_5sdp"
                    >
                    <TextView
                        android:id="@+id/label3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Total"
                        android:layout_weight="1"
                        android:padding="@dimen/_2sdp"
                        android:fontFamily="@font/helvetica"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <TextView
                        android:id="@+id/tvtotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$39.94"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:padding="@dimen/_2sdp"
                        android:fontFamily="@font/helvetica"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                </LinearLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:id="@+id/btnproceed"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/helvetica"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:text="PROCEED TO CHECKOUT"

                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_5sdp"
                    >

                    <TextView
                        android:id="@+id/label4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica"
                        android:padding="@dimen/_2sdp"
                        android:text="Pay in 4 interest-free payments of $9.99 with"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvpaylabel"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_toRightOf="@+id/label4"
                        android:layout_weight="1"
                        android:background="@drawable/afterpay_withbg"
                        android:fontFamily="@font/helvetica"
                        android:gravity="end"
                        android:padding="@dimen/_2sdp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:src="@drawable/ic_info"
                        android:id="@+id/imginfo"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_toRightOf="@+id/tvpaylabel"
                        android:layout_height="@dimen/_10sdp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/black"
                    android:padding="@dimen/_11sdp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"
                        android:src="@drawable/afterpay_white"
                        />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                   android:visibility="gone"

                    android:fontFamily="@font/helvetica"
                    android:textSize="@dimen/_12sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:text=""


                    />

            </LinearLayout>



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
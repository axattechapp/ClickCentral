<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >




        <TextView
            android:id="@+id/sell_label"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            android:layout_height="wrap_content"
            android:text="Support"
            android:fontFamily="@font/helveticabold"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread" />






        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:padding="@dimen/_5sdp"
            android:id="@+id/edtopic"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:hint="Support Topic"
            android:fontFamily="@font/helvetica"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@+id/sell_label"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:background="@drawable/edittext_bg"
            android:padding="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/edsupport"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:hint="Write your support enquiry hereâ€¦"
            android:fontFamily="@font/helvetica"
            android:gravity="top"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@+id/edtopic"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"

            />



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
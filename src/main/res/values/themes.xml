<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClickCentral" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

    </style>
<!--    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">-->
<!--        <item name="android:windowBackground">@drawable/app_logo</item>-->
<!--    </style>-->

    <style name="Theme.ClickCentral.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/white</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>
<!--        <item name="windowSplashScreenAnimationDuration">4000</item>  -->
        # Required for
        # animated icons

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.ClickCentral</item>
        # Required.
    </style>

    <style name="Theme.ClickCentral.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">/font/helvetica.ttf</item>
        <!--<item name="android:textSize" tools:override="true">10sp</item>-->
<!--        <item name="colorPrimary">@color/white</item>-->
        <item name="android:textColorSecondary">@color/white</item>

    </style>

    <style name="Theme.ClickCentral.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ClickCentral.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    <item name="android:layout_width">match_parent</item>
    <!-- No backgrounds, titles or window float -->

    </style>

    <style name="Drawer" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#0000</item>
    </style>
</resources>